<div class='container mx-auto'>
  <div class='flex justify-center p-12'>
    <div class='ml-auto mr-auto w-full lg:w-8/12'>
      <div class='text-lightBlue-500 bg-lightBlue-200 mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-3 text-center shadow-sm'></div>
      <h3 class='text-3xl font-semibold'><%= book.title %></h3>
      <p class='text-blueGray-500 my-4 text-lg leading-relaxed'>
        <%= book.body %>
      </p>
      <span class="bg-blue-100 text-blue-800 text-sm font-semibold p-2.5 rounded">
        <%= book.human_attribute_enum(:status) %>
        <%#= book.status %>
      </span>
    </div>
  </div>
</div>
